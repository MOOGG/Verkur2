@model Veidibokin.Models.UserStatusViewModel

@{
    ViewBag.Title = "PostCatch";
}
<br />
<span>
    <span>
        <img src="/Content/Images/logo.png" alt="Missing logo" height="100" width="100" />
    </span>
</span>
<span class="pull-right">
    <span>
        @Html.ActionLink("Til baka", "Index", null, new { @class = "btn btn-info primary" })
    </span>
</span>
<hr />
    <div class="statusContainer" id="statusform">
        @using (Html.BeginForm("PostCatch", "Catch", new { id = Model.myCatch }, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.TextBoxFor(f => f.myFeed.statusText, new { @Value = "", @class = "UserStatus", @id = "UserStatus", @name = "UserStatus", @placeholder = "Hvað liggur þér á hjarta?" })
            <br />
            <label for="photo"></label>
            @Html.TextBoxFor(f => f.myPic, new { type = "file" })
            <br />
            @Html.DropDownListFor(f => f.myCatch.fishTypeId, Veidibokin.Controllers.CatchController.GetFishTypeDropDown(),"Fisktegund")
            @Html.DropDownListFor(f => f.myCatch.baitTypeID, Veidibokin.Controllers.CatchController.GetBaitTypeDropDown(),"Beita")
            @Html.DropDownListFor(f => f.myCatch.zoneID, Veidibokin.Controllers.CatchController.GetZoneDropDown(),"Staður")
            <br />
            @Html.TextBoxFor(f => f.myCatch.length,  new { @Value = "", @class = "Catch", @id = "Catch", @name = "Catch", @placeholder = "Cm" })
            @Html.TextBoxFor(f => f.myCatch.weight, new { @Value = "", @class = "Catch", @id = "Catch", @name = "Catch", @placeholder = "Pund" })
            <input type="submit" class="btn btn-primary" id="submit" value="Birta" />
        }
        <br />
    </div>
